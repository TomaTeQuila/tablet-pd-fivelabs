---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import Sidebar from '../components/sidebars/Sidebar.astro';
import TabletNavbar from '../components/general/TabletNavbar.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Police System App" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />    
    <title>{title}</title>
  </head>
  <body>
    <div class="viewport-container">
      <div class="tablet-container">
        <TabletNavbar />
        <div class="app-container">
          <Sidebar />
          <main class="app-body">
            <slot />
          </main>
        </div>
      </div>
    </div>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --bg-primary: #06080f;
    --bg-secondary: #161920;
    --bg-secondary-alt: #182239;
    --bg-tertiary: #252b3d;
    --bg-card: #1e2532;
    --bg-elevated: #2a3441;
    --border-color: #333f52;
    --border-light: #3a4553;
    --text-primary: #f7fafc;
    --text-secondary: #cbd5e0;
    --text-tertiary: #e7e7e787;
    --text-muted: #718096;
    --text-active: #b5d5f6;
    --accent-blue: #23547c;
    --sidebar-blue: #3883c0;
    --accent-darker-blue: #2e3f5f;
    --accent-green: #28583c;
    --accent-red: #f56565;
    --accent-yellow: #ed8936;
    --accent-purple: #9f7aea;
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8px 25px rgba(0, 0, 0, 0.5);

    --app-width: 1400px;
    --app-height: 900px;
    
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 16px;
  }

  @media screen and (max-width: 1920px) and (max-height: 1080px) {
    :root {
      --app-width: min(1400px, 95vw);
      --app-height: min(900px, 95vh);
    }
  }

  body {
    font-family: 'Funnel Display', sans-serif;
    background: #2d1c2e;
    color: #fff;
    overflow: hidden;
    width: 100vw;
    height: 100vh;
  }
  .viewport-container {
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .tablet-container {
    width: var(--app-width);
    height: var(--app-height);
    display: flex;
    flex-direction: column;
  }

  .app-container {
    flex: 1;
    background-image: linear-gradient(to right bottom, var(--bg-primary), #0d111f, #101424, #131729, #161a2e, #191d33, #1c2038, #1f233d, #212541, #242746, #26294a, #282b4f);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    overflow: hidden;
    display: flex;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-color);
    border-top: 0;
  }

  .app-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: var(--spacing-md);
    overflow: hidden;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 400;
    margin: 0;
  }

  h1 { font-size: 1.5rem; }
  h2 { font-size: 1.25rem; }
  h3 { font-size: 1.125rem; }
  h4 { font-size: 1rem; }

  p {
    margin: 0;
    color: var(--text-secondary);
  }
  button {
    font-family: inherit;
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 1rem;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }
  input, textarea, select {
    font-family: inherit;
    padding: var(--spacing-sm);
    font-size: 1rem;
    border-radius: var(--radius-sm);
    background-color: transparent;
    border: 2px solid var(--border-color);
    color: white;
    transition: border-color 0.3s ease;
  }

  input:focus, textarea:focus, select:focus {
    outline: none;
    border-color: var(--accent-blue);
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 999px;
    transition: background-color 0.3s;
  }

  ::-webkit-scrollbar-thumb:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  .flex { display: flex; }
  .flex-col { flex-direction: column; }
  .items-center { align-items: center; }
  .justify-center { justify-content: center; }
  .justify-between { justify-content: space-between; }
  .gap-sm { gap: var(--spacing-sm); }
  .gap-md { gap: var(--spacing-md); }
  .gap-lg { gap: var(--spacing-lg); }
  .w-full { width: 100%; }
  .h-full { height: 100%; }
  .overflow-auto { overflow: auto; }
  .overflow-hidden { overflow: hidden; }
</style>