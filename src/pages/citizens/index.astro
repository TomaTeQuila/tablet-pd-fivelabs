---
import Layout from "../../layouts/Layout.astro";

import CitizenCard from "../../components/CitizenCard.astro";

import { citizens } from "../../data/citizens";
---

<Layout title="Home">
    <div class="body-header">
        <div class="body-header-items">
            <div class="body-header-items-top">
                <span class="material-symbols-rounded">group_search</span>
                <h1>Lista de ciudadanos</h1>
            </div>
            <p>Lista de todos los ciudadanos registrados</p>
        </div>
        <div class="header-search">
            <input type="text" placeholder="🔍 Buscar ciudadano" class="search-input"> 
        </div>
    </div>
    <div class="body-content">
        {Object.values(citizens).map((citizen) => (
            <CitizenCard 
                id={citizen.id}
                name={citizen.name}
                surname={citizen.surname}
                mugshot={citizen.mugshot}
            />
        ))}


    </div>
</Layout>

<style>
    .body-header {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin: 1.25rem;
    }

    .body-header-items-top {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .body-header-items p {
        display: flex;
        font-size: 1rem;
        color: var(--text-tertiary);
    }

    .header-search {
        padding-right: 0.8rem;
    }
    
    .search-input {
        background-color: transparent;
        border: 2px solid var(--border-color);
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        font-family: 'Funnel Display', sans-serif;
        color: white;
        width: 20rem;
    }

    .body-content {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 1rem;
        padding-left: 1rem;
        overflow-y: auto;
        height: 100%;
    }


    h1 {
        font-size: 1.25rem;
        color: var(--text-primary);
        font-family: 'Funnel Display', sans-serif;
        font-weight: 400;
    }
    
    span {
        font-size: 1.4rem;
        margin-right: 0.5rem;
    }



    /* Scrollbar para navegar por los weones */
    .body-content::-webkit-scrollbar {
        width: 8px;
    }

    .body-content::-webkit-scrollbar-track {
        background: transparent;
    }

    .body-content::-webkit-scrollbar-thumb {
        background-color: rgba(255, 255, 255, 0.073);
        border-radius: 999px;
        transition: background-color 0.3s;
    }

    .body-content::-webkit-scrollbar-thumb:hover {
        background-color: rgba(255, 255, 255, 0.275);
    }
</style>