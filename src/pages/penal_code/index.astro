---
import Layout from "../../layouts/Layout.astro" 
import PenalCodeItems from "../../components/PenalCodeItems.astro"
import { penal_codes, type PenalCode } from '../../data/penalcode';

const {id, name, description, fine, prison, category } = Astro.props;
---

<Layout title="Multas y condenas">
    <section class="header-penal-code-section">
        <div class="header">
            <div class="header-items">
                <div class="header-items-top">
                    <span class="material-symbols-rounded">balance</span>
                    <h1>Código Penal</h1>
                </div>
                <p>Código penal con sus multas y condenas</p>
            </div>
            <div class="header-search">
                <input type="text" placeholder="🔍 Buscar" class="search-input"> 
            </div>
        </div>
    </section>
    <section class="body-penal-code-section">
        <div class="body">
        {Object.values(penal_codes).map((penal_code) => (
            <PenalCodeItems 
                id={penal_code.id}
                name={penal_code.name}
                description={penal_code.description}
                fine={penal_code.fine}
                prison={penal_code.prison}
                category={penal_code.category}
            />
        ))}
        </div>
    </section>
</Layout>

<style>
    .header-penal-code-section {
        display: flex;
        flex-direction: row;
        justify-content: start;
        align-items: center;
        padding: 16px
        width: 100%;
    }

    .header {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin: 1.25rem;
        width: 100%;
    }

    .header-items-top {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.40rem;
    }

    .header-items-top h1 {
        font-size: 1.25rem;
        color: var(--text-primary);
        font-family: 'Funnel Display', sans-serif;
        font-weight: 400;
    }

    .header-items p {
        display: flex;
        font-size: 1rem;
        color: var(--text-tertiary);
    }
    
    .search-input {
        background-color: transparent;
        border: 2px solid var(--border-color);
        border-radius: 5px;
        padding: 10px 10px;
        font-size: 1rem;
        font-family: 'Funnel Display', sans-serif;
        color: white;
        width: 20rem;
    }

    .body-penal-code-section {
        margin: 1.25rem;
        overflow-y: auto;
        height: 100%;
    }

    .body {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }
</style>