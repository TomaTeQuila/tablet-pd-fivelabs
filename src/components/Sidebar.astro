---
const menuItems = [
  { name: 'Inicio', icon: 'home', href: '/', badge: '' },
  { name: 'Ciudadanos', icon: 'person', href: '/citizens', badge: '' },
  { name: 'Registro veh√≠culos', icon: 'traffic_jam', href: '/profile', badge: '' },
  { name: 'Multas y condenas', icon: 'gavel', href: '/vehicles', badge: '' },
];

const quickActions = [
  { name: 'Mensajes', icon: 'inbox_text' },
];

const { pathname } = Astro.url;
---
<div class="sidebar">
  <nav class="sidebar-nav">
    {menuItems.map((item) => (
      <a href={item.href} class={`nav-item ${pathname === item.href ? 'active' : ''}`}>
        <span class="nav-icon material-symbols-rounded">{item.icon}</span>
        <span class="nav-text">{item.name}</span>
        {item.badge && (
          <span class="nav-badge">{item.badge}</span>
        )}
      </a>
    ))}
  </nav>
  
  <div class="sidebar-footer">
    <div class="quick-actions">
        {quickActions.map((action) => (
            <a class="quick-action">
                <span class="action-icon material-symbols-rounded">{action.icon}</span>
                <span class="action-text">{action.name}</span>
            </a>
        ))}
    </div>
  </div>
</div>

<style>
  .sidebar {
    width: 280px;
    background-image: linear-gradient(to top, var(--bg-secondary), #171b26, #171e2c, #182033, var(--bg-secondary-alt));
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .sidebar-nav {
    flex: 1;
    padding: 20px 0;
    overflow-y: auto;
  }

  a {
    font-family: 'Funnel Display', sans-serif;
    font-weight: 800;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px 24px;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
    border-left: 3px solid transparent;
    margin: 2px 0;
  }

  .nav-item:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .nav-item.active {
    background: rgba(51, 66, 134, 0.117);
    border-radius: 0px 15px 0px 0px;
    box-shadow: var(--shadow-sm);
    color: var(--text-active);
    border-left: 3px solid var(--accent-blue);
  }

  .nav-item.active::before {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 3px;
  }

  .nav-icon {
    font-size: 20px;
    width: 24px;
    text-align: center;
    position: relative;
  } 


  .nav-text {
    font-size: 16px;
    font-weight: 500;
    flex: 1;
  }

  .nav-badge {
    background: var(--accent-red);
    color: white;
    font-size: 11px;
    padding: 4px 8px;
    border-radius: 12px;
    font-weight: 600;
  }

  .sidebar-footer {
    padding: 20px;
    border-top: 1px solid var(--border-color);
  }

  .quick-actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .quick-action {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .quick-action:hover {
    background: var(--bg-elevated);
    transform: translateY(-1px);
  }

  .action-icon {
    font-size: 1.25rem;
  }

  .action-text {
    font-size: 1rem;
    font-weight: 500;
  }

</style>
